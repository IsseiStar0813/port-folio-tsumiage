<% if flash %>
  <% flash.each do |message_type, message| %>
    <% if message_type == "red" %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mx-28 mt-10"><%= message %></div>
    <% else%>
      <div class="bg-purple-100 border border-purple-400 text-purple-700 px-4 py-3 rounded relative mx-28 mt-10"><%= message %></div>
    <% end %>
  <% end %> 
<% end %>
