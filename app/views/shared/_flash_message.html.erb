<% if flash %>
  <% flash.each do |message_type, message| %>
    <div :class = "isIndicate? 'block' : 'hidden'">
      <% if message_type == "red" %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mx-5 lg:mx-28 mt-10">
        <%= message %><button @click = "isIndicate = !isIndicate">✕</button></div>
      <% else%>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mx-5 lg:mx-28 mt-10">
        <%= message %><button @click = "isIndicate = !isIndicate">✕</button></div>
      <% end %>
    </div>
  <% end %> 
<% end %>
