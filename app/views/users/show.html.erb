<div class = "container">

    <%= link_to new_post_path do %>
      <button class = "tsumiage-button">積み上げる</button>
    <% end %>
  
  <div class = "profile">
    <div class = "profile-item">
        <p><%= @user.name %></p>
    </div>

    <div class = "profile-item">
        <p><%= @user.posts.count %>積み上げ</p>
    </div>

    <div class = "profile-item">
        <p><%= @user.tsumiage_count %>日継続</p>
    </div>
  </div>

  <div class = "calender">
      <h1>学習カレンダー</h1>
        <%= month_calendar events: @posts do |date,events| %>
          <%= date.day %>

            <div>
              <% if !events.empty? %>
                積
              <% end %>
            </div>
        
        <% end %>
  </div>

  <div class = "latest-posts">
    <h1>最近の投稿</h1>
    <% @posts.first(8).each do |post| %>
      <p> <%= link_to(post.title, post_path(post.id), class: "link") %></p> 
    <% end %>
  </div>

</div>

  


