<div class = "lg:mx-60">  
  <h1 class = "text-xl my-10">パスワード再設定</h1>

  <%= form_with(model: @user, url: password_reset_path(params[:id]),
                    local: true) do |f| %>
      
        <%= render "shared/error_message", object: f.object%>

        <%= hidden_field_tag :email, @user.email %>

        <%= f.label :password, "新しいパスワードを入力してください" %>
        <%= f.password_field :password, class: "block border-2 border-gray-400 w-full mt-1 py-1 mb-10" %>


        <%= f.label :password_confirmation, "確認のためもう一度入力してください" %>
        <%= f.password_field :password_confirmation, class: "block border-2 border-gray-400 w-full mt-1 py-1 mb-10" %>

        <%= f.submit "パスワード再設定", class: "bg-transparent md:hover:bg-purple-600 text-purple-700 font-semibold md:hover:text-white px-4
      border-2 border-purple-600 md:hover:border-transparent rounded md:text-2xl mt-4 w-full mt-10 py-1" %>

      <% end %>
</div>