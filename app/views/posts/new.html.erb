  <div class = "mt-10 md:mx-60">
    <%= form_with(model: @post, local: true) do |f| %>
    <%= render "shared/error_message", object: f.object %>   
      <%= f.text_field :title, class: "border-2 border-gray-400 w-full py-1", :placeholder => "タイトルを入力してください" %>
      <%= f.text_area :content,class: "border-2 border-gray-400 w-full h-56 my-4 md:h-80", :placeholder => "自由に記述してください" %>
      <%= f.hidden_field :start_time, :value => Date.today %>
      <%= f.submit "投稿", class: "bg-transparent md:hover:bg-purple-600 text-purple-700 font-semibold md:hover:text-white py-2 px-4 
      border-2 border-purple-600 md:hover:border-transparent rounded md:text-2xl w-full" %>
    <% end %>
  </div>



