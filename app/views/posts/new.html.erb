<div class = "mt-20 xl:mx-60">
  <h1 class = "text-2xl mb-6">積み上げ</h1>
  <%= form_with(model: @post, local: true) do |f| %>
  <%= render "shared/error_message", object: f.object %>   
    <%= f.text_field :title, class: "border-2 border-gray-400 w-full py-1", :placeholder => "タイトルを入力してください" %>
    <%= f.text_area :content,class: "border-2 border-gray-400 w-full h-56 my-4 xl:h-80", :placeholder => "学習内容等、自由に記述してください(Markdown記法が使えます)" %>
    <%= f.hidden_field :start_time, :value => Date.today %>
    <%= f.submit "投稿", class: "hover:bg-gray-700 hover:text-white bg-white border-solid border-gray-400 border-2 font-bold py-2 px-4 rounded md:text-2xl w-full" %>
  <% end %>
</div>



