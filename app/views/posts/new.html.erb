
<%= form_with(model: @post, local: true) do |f| %>

<%= render "shared/error_message", object: f.object %>

  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%= f.label :content, "Content" %>
  <%= f.text_area :content %>

  <%= f.hidden_field :start_time, :value => Date.today %>

  <%= f.submit "POST" %>

<% end %>