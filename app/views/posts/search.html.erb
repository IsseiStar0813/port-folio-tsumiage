<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword %>
    <%= f.submit "検索" %>
  <% end %>
</div>

<% if @search_posts %>
  <div class="post-list">
    <% @search_posts.each do |post| %>
      <p><%= link_to(post.title, post_path(post.id)) %></p>
    <% end %>
  </div>
<% end %>