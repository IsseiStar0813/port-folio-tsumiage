<div class = "mt-10 xl:mx-60">

  <div class = "border-b-2 border-gray-600 pb-2">
    <h1 class = "text-xl pb-2 border-b-2 border-gray-600 md:text-4xl"><%= @post.title %></h1>
    <div class = "mx-12 pt-10">
      <div class = "markdown-body"><%=markdown(@post.content)%></div>   
      <p class = "text-gray-500 pt-10 flex justify-end"><%= japanese_time(@post.created_at) %></p>
    <div>
  </div>

  <div class = "flex justify-between mt-16 mx-4 mb-10">
    <%= button_to(post_path, method: :delete) do %>
      <button class = "bg-transparent md:hover:bg-red-600 text-red-700 font-semibold md:hover:text-white px-4
      border-2 border-red-600 md:hover:border-transparent rounded md:text-2xl w-32 md:w-60">削除</button>
    <% end %>

    <%= link_to(edit_post_path(@post.id)) do %>
      <button class = "bg-transparent md:hover:bg-purple-600 text-purple-700 font-semibold md:hover:text-white px-4
      border-2 border-purple-600 md:hover:border-transparent rounded md:text-2xl w-32 md:w-60">編集</button>
    <% end %>
  </div>

</div>