<div class = "post-container">
  <div class = "post-detail">
    <h1><%= @post.title %></h1>
    <p class = "content"><%=safe_join(@post.content.split("\n"),tag(:br))%></p>   
    <p class = "created-at"><%= japanese_time(@post.created_at) %></p>
  </div>

  <div class = "post-setting">
    <p><%= link_to("編集", edit_post_path(@post.id)) %></p>
    <P><%= link_to("削除", post_path, method: :delete,
                                        data: { confirm: "削除しますか?" } ) %>
  </div>
</div>