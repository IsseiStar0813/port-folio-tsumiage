<div class = "mt-20 xl:mx-20">

  <div class = "pb-2 markdown-body border-solid border-2 border-gray-600">
    <h1 class = "px-4 pt-4"><%= @post.title %></h1>
    <div class = "mx-12">
      <div><%=markdown(@post.content)%></div>   
      <p class = "text-gray-500 pt-10 flex justify-end"><%= japanese_time(@post.created_at) %></p>
    <div>
  </div>

  <div class = "flex justify-end mt-6">

    <%= button_to(edit_post_path(@post.id)) do %>
      <p class = "mr-4 hover:underline">編集</p>
    <% end %>

    <%= button_to(post_path, method: :delete) do %>
      <p class = "hover:underline" @click = "dlt">削除</p>
    <% end %>

  </div>

</div>