<div>
  <%= @posted_day %>
  <div> 
    <% if @schedules %>
      <% @schedules.each do |schedule| %>
        <%= schedule.task %>
        <%= schedule.hours %>
      <% end %>
    <% end %>
  </div>
  <div class = "mt-10 xl:mx-60">
    <p>新しいタスクを作成</p>
    <%= form_with(model: @schedule, local: true) do |f| %>
    <%= render "shared/error_message", object: f.object %>   
      <%= f.text_field :task, class: "border-2 border-gray-400 w-full py-1", :placeholder => "取り組む事柄" %>
      <%= f.number_field :hours,class: "border-2 border-gray-400 w-full", :placeholder => "取り組む時間" %>
      <%= f.hidden_field :start_time, :value => @posted_day %>
      <%= f.submit "投稿", class: "bg-transparent md:hover:bg-purple-600 text-purple-700 font-semibold md:hover:text-white py-2 px-4 
      border-2 border-purple-600 md:hover:border-transparent rounded md:text-2xl w-full" %>
    <% end %>
  </div>
  
</div>