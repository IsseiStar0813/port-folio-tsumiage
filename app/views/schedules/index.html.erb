<div class = "xl:mx-60">
  <div class = "text-xl mt-6 lg:text-2xl">
    <p><%= @posted_day %></p>
  </div>
  <div class = "mt-6">
    <%= form_with(model: @schedule, local: true) do |f| %>
    <%= render "shared/error_message", object: f.object %>   
      <div class = "border-2 border-gray-400 ">
        <%= f.time_select :start %> ~ <%= f.time_select :finish %></div>
      <div><%= f.text_field :task, class: "border-2 border-gray-400  py-1 mb-4 mt-4 w-full ", :placeholder => "取り組む内容" %></div>
      <%= f.hidden_field :start_time, :value => @posted_day %>
      <div><%= f.submit "予定を追加", class: "bg-transparent md:hover:bg-purple-600 text-purple-700 font-semibold md:hover:text-white py-2 px-4
      border-2 border-purple-600 md:hover:border-transparent rounded md:text-2xl w-full " %></div>
    <% end %>
  </div>

  <div class = "mt-12"> 
    <% if @schedules %>
      <% @schedules.each do |schedule| %>
        <div class = "text-lg mb-4 flex lg:text-xl">
          <p class = "mr-4 lg:mr-12"><%= schedule.start.strftime("%-H:%M") %> ~ <%= schedule.finish.strftime("%-H:%M") %></p>
          <p><%= schedule.task %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  
  
</div>