<div class = "mt-40"> 
  <h1 class = "text-2xl mb-6">学習スケジュール</h1>
  <%= week_calendar(number_of_weeks: 1, events: @tasks) do |date,tasks| %>

    <div class = "hover:underline  hover:text-purple-700">
      <%= link_to schedules_path(created: date) do %>
        <%= date.strftime("%-m/%d") %>
      <% end %>
    </div>

    <div>
      <% unless tasks.empty? %>
        予定あり
      <% end %>
    </div>

  <% end %>
</div>