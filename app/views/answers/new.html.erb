<div class = "mt-10 md:mx-60">  
  <h1 class = "text-2xl mb-6">回答ページ</h1>
  <div>
    <h1 class = "text-xl border-b-4 border-gray-500 border-dotted"><%= @question.title %></h1>
    <p ><%= @question.content %></p>
  </div>
  <div>
    <%= form_with(model: @answer, local: true) do |f| %>
      <%= render "shared/error_message", object: f.object %>   
      <%= hidden_field_tag :question, @question.id %>
      <%= f.text_area :content,class: "border-2 border-gray-400 w-full h-56 my-4 xl:h-80", :placeholder => "質問への回答を記述してください" %>
      <%= f.submit "投稿", class: "hover:bg-gray-700 hover:text-white bg-white border-solid border-gray-400 border-2 md:text-2xl w-full" %>
    <% end %>
  </div>
</div>